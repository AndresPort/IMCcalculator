<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <View
        android:id="@+id/vBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_700" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="380dp"
        android:layout_height="85dp"
        android:text="Tú índice de masa corporal es de:"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        />
    
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="100dp"
        android:layout_height="50dp"
        tools:text="12,42"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tvClasificationTitle"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Clasificación:"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tvClasificationResult"
        android:layout_width="300dp"
        android:layout_height="40dp"
        tools:text="peso inferior al normal"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tvClasificationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/tvExplanationTitle"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="Guía:"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvClasificationResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tvImcExplanation"
        android:layout_width="190dp"
        android:layout_height="200dp"
        android:text="Menos de 18,5 \n18,5 - 24,9 \n25-29,9 \n30-34,9 \n35-39,9 \nMás de 40"
        android:lineSpacingMultiplier="1.5"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvExplanationTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvClasificationExplanation"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tvClasificationExplanation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="Peso inferior al normal \nPeso normal \nSobrepeso \nObesidad I \nObesidad II \nObesidad III"
        android:lineSpacingMultiplier="1.5"
        android:textSize="19sp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvExplanationTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvImcExplanation"
        android:layout_marginTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>