<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IMCCalculatorActivity">

    <View
        android:id="@+id/vBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_700" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:text="Calculadora de Indice de Masa Muscular"
        android:textSize="33sp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" 
        />

    <TextView
        android:id="@+id/tvSubTitle"
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:text="Por favor ingrese los siguientes datos:"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/tvSubTitle"
        android:id="@+id/tvFirstQuest"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Altura en cm:"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="200dp"
        />

    <EditText
        android:id="@+id/etFirstQuest"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/tvFirstQuest"
        app:layout_constraintTop_toBottomOf="@id/tvSubTitle"
        app:layout_constraintBottom_toTopOf="@id/tvSecondQuest"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="22dp"
        />

    <TextView
        android:id="@+id/tvSecondQuest"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="Peso en Kg:"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tvSubTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="200dp"
        />

    <EditText
        android:id="@+id/etSecondQuest"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:textColor="@color/black"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/tvSecondQuest"
        app:layout_constraintTop_toBottomOf="@id/etFirstQuest"
        app:layout_constraintBottom_toTopOf="@id/btnCalculate"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="-20dp"
        />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="360dp"
        android:layout_height="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSecondQuest"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Calcular Indice de masa corporal"
        android:textSize="28sp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>